// -*- mode: jsonc -*-
{
    // Bar settings
    "layer": "top", 
    "position": "top",
    "height": 40,
    "spacing": 6, // Gaps between modules

    // Module layout
    "modules-left": [
        "hyprland/workspaces",
        "custom/media"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        // "mpd",
        // "idle_inhibitor",
        "pulseaudio",
        "network",
        // "cpu",
        // "memory",
        // "temperature",
        "backlight",
        "keyboard-state",
        "battery",
        "clock",
        "tray",
        "custom/notification"
        // "custom/power"
    ],

    // Workspaces (minimal look with icons)
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        // "format-icons": {
        //     "1": "ÔÑ†", // terminal
        //     "2": "Ôâ®", // browser
        //     "3": "ÔÑ°", // code
        //     "4": "ÔÜº", // music
        //     "5": "ÔÅµ", // chat
        //     "urgent": "ÔÅ™",
        //     "focused": "ÔÜí",
        //     "default": "ÔÑë"
        // }
    },

    "hyprland/window": {
        "max-length": 30,   // maximum number of characters
        "format": "{title}",  // window title
    },

    // Keyboard indicators
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },

    // Scratchpad
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip-format": "{app}: {title}"
    },

    // MPD (Music Player Daemon)
    "mpd": {
        "format": "{stateIcon} {artist} - {title} ÔÄÅ",
        "format-disconnected": "ÔÑß MPD",
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "interval": 5
    },

    // Idle inhibitor
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    // Tray
    "tray": {
        "spacing": 8,
        "icon-size": 20
    },

    // Clock (dual-format with calendar tooltip)
    "clock": {
        "format": "ÔÄó {:%I:%M %p}",
        "format-alt": "ÔÅ≥ {:%d-%m-%Y}",
        "tooltip-format": "<big>{:%A, %d %B %Y}</big>\n<tt><small>{calendar}</small></tt>"
    },

    // CPU
    "cpu": {
        "format": "Ôãõ {usage}%",
        "tooltip": false
    },

    // Memory
    "memory": {
        "format": "ÔÉâ {used:0.1f}G / {total:0.1f}G"
    },

    // Temperature
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },

    // Backlight
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },

    // Battery
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôá¶",
        "format-plugged": "{capacity}% Ôá¶",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    // Network
    "network": {
        "format-wifi": "Ôá´ {essid} ({signalStrength}%)",
        "format-ethernet": "Ôûñ {ipaddr}",
        "format-disconnected": "‚ö† Disconnected"
    },

    // Audio
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-muted": "Ôö©",
        "format-icons": {
            "headphone": "ÔÄ•",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },

    // Media (MPRIS script)
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéµ"
        },
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null"
    },

    // Power button
    "custom/power": {
        "format": "‚èª",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml",
        "menu-actions": {
            "shutdown": "shutdown now",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },

    // Swaync
    "custom/notification": {
        "tooltip": true,
        "format": "<span>{icon}</span>",
        "format-icons": {
            "notification": "Û±Ö´",
            "none": "Û∞Çú",
            "dnd-notification": "Û∞Ç†",
            "dnd-none": "Û∞™ì",
            "inhibited-notification": "Û∞Çõ",
            "inhibited-none": "Û∞™ë",
            "dnd-inhibited-notification": "Û∞Çõ",
            "dnd-inhibited-none": "Û∞™ë"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    }
}
